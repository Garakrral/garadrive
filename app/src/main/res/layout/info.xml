<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Başlık Bölümü -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            android:layout_marginBottom="24dp"
            app:strokeColor="#444"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/app_logo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logo"
                    android:layout_marginBottom="16dp"
                    app:strokeColor="#444"
                    app:strokeWidth="2dp"/>

                <TextView
                    android:id="@+id/app_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/version_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version_info"
                    android:textSize="16sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GitHub Linki -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/github_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:strokeColor="#444"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/github_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GitHub"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/github_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Projeyi GitHub'da Gör"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:textColor="#4CAF50"
                    app:iconTint="#4CAF50"
                    app:strokeColor="#4CAF50"
                    app:strokeWidth="1dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Ekibimiz -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/team_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:strokeColor="#444"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/team_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ekibimiz"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/developer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Geliştirici: @KaplanBedwars"
                        android:textSize="16sp"
                        android:textColor="#E0E0E0"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- İzinler -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/permissions_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp"
            app:strokeColor="#444"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/permissions_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gerekli İzinler"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/permissions_chip_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/internet_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İnternet"
                        app:chipBackgroundColor="#FF980020"
                        android:textColor="#FF9800"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/notification_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bildirim gönderme"
                        app:chipBackgroundColor="#FF980020"
                        android:textColor="#FF9800"
                        android:layout_marginStart="8dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/storage_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Depolama"
                        app:chipBackgroundColor="#FF980020"
                        android:textColor="#FF9800"
                        android:layout_marginStart="8dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/foreground_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="android.permission.FOREGROUND_SERVICE"
                        app:chipBackgroundColor="#FF980020"
                        android:textColor="#FF9800"
                        android:layout_marginStart="8dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/network_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="android.permission.ACCESS_NETWORK_STATE"
                        app:chipBackgroundColor="#FF980020"
                        android:textColor="#FF9800"
                        android:layout_marginStart="8dp"/>
                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/permissions_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bu izinler uygulamanın temel işlevlerini yerine getirebilmesi için gereklidir."
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Hata Bildirimi -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/report_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="#444"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/report_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hata Bildirimi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/report_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Karşılaştığınız sorunları bize bildirerek uygulamanın gelişimine katkı sağlayabilirsiniz."
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/report_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HATA BİLDİR"
                    style="@style/Widget.Material3.Button"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    app:backgroundTint="#F44336"
                    app:iconTint="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>