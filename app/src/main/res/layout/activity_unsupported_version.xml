<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="24dp">

    <!-- Warning Icon (app:tint kullanıldı) -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_dialog_alert"
        app:tint="@android:color/holo_red_dark"
        android:layout_marginBottom="24dp"/>

    <!-- Main Warning Text -->
    <TextView
        android:id="@+id/warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UYGULAMA DESTEKLENMİYOR!"
        android:textSize="22sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Explanation Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cihazınız bu uygulamayı çalıştırmak için gerekli minimum Android sürümüne (Android 12) sahip değil."
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <!-- Danger Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uygulamayı zorla çalıştırmaya çalışırsanız sistem çökebilir!"
        android:textSize="16sp"
        android:textColor="@android:color/holo_orange_light"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginBottom="32dp"/>

    <!-- Details Button -->
    <Button
        android:id="@+id/details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detayları Göster"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"/>

    <!-- Hidden Details Text -->
    <TextView
        android:id="@+id/details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bu uygulama Material 3 tasarım bileşenleri kullanıyor. Android 12 altındaki sürümlerde bu bileşenler desteklenmediği için uygulama açılmayacaktır."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

    <!-- Exit Button -->
    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ÇIKIŞ YAP"
        android:background="@drawable/red_button_background"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"/>

</LinearLayout>