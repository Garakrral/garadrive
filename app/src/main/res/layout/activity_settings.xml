<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_dynamic_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayarlar"
            android:textColor="#E0E0E0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp"
            android:letterSpacing="0.02"/>

        <!-- Sunucu URL Alanı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_dynamic_gradient"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:outlineAmbientShadowColor="#BB86FC30"
            android:outlineSpotShadowColor="#BB86FC30"
            android:elevation="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunucu Adresi"
                android:textColor="#BB86FC"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/editTextServerUrl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textUri|textNoSuggestions"
                android:imeOptions="actionDone"
                android:hint="https://ornek.sunucu.com"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"

                android:paddingStart="0dp"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Anahtar Ayarlar Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_dynamic_gradient"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:elevation="1dp">

            <!-- İpucu Bildirimleri -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="İpucu Bildirimleri"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"/>

                <Switch
                    android:id="@+id/switchTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="#BB86FC"
                    android:trackTint="#333333"
                    android:trackTintMode="multiply"/>
            </LinearLayout>

            <!-- Bölücü Çizgi -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#252525"
                android:layout_marginStart="16dp"/>

            <!-- Hata Bildirimleri -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hata Bildirimleri"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp"/>

                <Switch
                    android:id="@+id/switchErrorNotifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="#BB86FC"
                    android:trackTint="#333333"
                    android:trackTintMode="multiply"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Kaydet Butonu -->
        <Button
            android:id="@+id/buttonSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Ayarları Kaydet"
            android:textColor="#0F0F0F"
            android:backgroundTint="#BB86FC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:elevation="2dp"
            android:stateListAnimator="@null"/>

        <!-- Alt Bilgi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_info"
                android:textColor="#666666"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/buttonCheckUpdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Güncellemeleri Kontrol Et"
                android:textColor="#BB86FC"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>