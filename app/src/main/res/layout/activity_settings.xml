<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AYARLAR"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Sunucu URL Alanı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunucu Adresi"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/editTextServerUrl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textUri|textNoSuggestions"
                android:imeOptions="actionDone"
            android:hint="http://192.168.1.1:8080"
                android:textColor="@color/white"
                android:background="@null"
                android:paddingStart="0dp"/>
        </LinearLayout>

        <!-- Tema Seçimi -->

        <!-- settings_activity.xml -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İpucu Bildirimleri"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <Switch
                android:id="@+id/switchTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İpuçlarını Göster"
                android:checked="true"/>
        </LinearLayout>

        <!-- Hata Bildirimleri Switch'i Eklendi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"

            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hata Bildirimleri"
                android:textColor="@color/white"
                android:textSize="14sp"/>

            <Switch
                android:id="@+id/switchErrorNotifications"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Hata bildirimlerini göster"
                android:checked="true"/>
        </LinearLayout>

        <!-- Kaydet Butonu -->
        <Button
            android:id="@+id/buttonSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="AYARLARI KAYDET"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:layout_marginTop="16dp"
            android:elevation="2dp"/>

        <!-- Sürüm Bilgisi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v14 kaplanui 2.2 EASTEREGG"
            android:textColor="#9E9E9E"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"/>

        <Button
            android:id="@+id/buttonCheckUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güncellemeleri kontrol et"
            android:textSize="12sp"
            android:textColor="#3F51B5"
            android:background="@android:color/transparent"
            android:layout_marginStart="16dp"
            android:padding="4dp"/>
    </LinearLayout>
</ScrollView>