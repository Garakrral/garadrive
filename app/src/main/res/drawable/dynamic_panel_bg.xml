<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ana gölge katmanı -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#1A00CED1"/>
            <stroke android:width="1dp" android:color="#3300CED1"/>
        </shape>
    </item>

    <!-- Işık efekti (üst kısım) -->
    <item android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="12dp"
                android:topRightRadius="12dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
            <gradient
                android:startColor="#0000CED1"
                android:endColor="#0000CED1"
                android:angle="90"/>
                                 <!-- Düzeltme burada -->
        </shape>
    </item>

    <!-- Parlak border efekti -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke
                android:width="0.5dp"
                android:color="#AA00FFFF"
                android:dashWidth="3dp"
                android:dashGap="6dp"/>
        </shape>
    </item>
</layer-list>