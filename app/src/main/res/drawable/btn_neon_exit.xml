<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bas覺l覺 durum -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Ana renk -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <solid android:color="#60FF4444"/>
                    <stroke android:width="2dp" android:color="#FFFF4444"/>
                </shape>
            </item>

            <!-- Parlakl覺k efekti -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <gradient
                        android:startColor="#10FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90"/>
                    <padding android:top="1dp" android:bottom="8dp"/>
                </shape>
            </item>

            <!-- Neon glow -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#FFFF9999"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Normal durum -->
    <item>
        <layer-list>
            <!-- Ana renk -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <solid android:color="#30FF4444"/>
                    <stroke android:width="2dp" android:color="#FFFF4444"/>
                </shape>
            </item>

            <!-- Parlakl覺k efekti -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <gradient
                        android:startColor="#20FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90"/>
                    <padding android:top="1dp" android:bottom="8dp"/>
                </shape>
            </item>

            <!-- Neon glow -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#FFFF6666"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>